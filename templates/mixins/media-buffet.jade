mixin mediaBuffet(media_buffet)
	section.media-buffet
		.media-buffet-column-left
			.media-buffet-top-block
				.video
					if media_buffet.video.video_choice
						if assetURI(media_buffet.video.video.url)
							a(data-toggle="modal" data-video-data=assetData(media_buffet.video) data-target="#video_modal" style= assetURI(media_buffet.video.background.url) ? "background-image: url(" +assetURI(media_buffet.video.background.url)+");" : "").video-link.pi-video
								img(src="/icons/png/icon-play.png")
						else
							a(data-toggle="modal" data-video-data=assetData(global_data.default_video) data-target="#video_modal" style= assetURI(global_data.default_video.background.url) ? "background-image: url(" +assetURI(global_data.default_video.background.url)+");" : "").video-link.pi-video
								img(src="/icons/png/icon-play.png")
					else
						a(style= assetURI(media_buffet.video.background.url) ? "background-image: url(" +assetURI(media_buffet.video.background.url)+");" : "").remove-pointer
					h4.media-title!=media_buffet.video.title
					.media-buffet-gradient
			.media-buffet-bottom-block
				.values
					!= media_buffet.values.content
					h4.media-title!=media_buffet.values.title

		.media-buffet-column-right
			.media-buffet-top-block
				.facts(style= assetURI(media_buffet.facts.featured_image.url) ? "background-image: url(" +assetURI(media_buffet.facts.featured_image.url)+");" : "")
			.media-buffet-bottom-block
				.story
					a(data-toggle="modal" data-target="#story_modal" data-story-data=assetData(media_buffet.story) style= assetURI(media_buffet.story.featured_image.url) ? "background-image: url(" + assetURI(media_buffet.story.featured_image.url)+");" : "").story-link.pi-success-story
						img(src="/icons/png/icon-plus.png")
						h4.media-title!=media_buffet.story.title
					.media-buffet-gradient
