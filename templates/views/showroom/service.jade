extends ../../layouts/default-showroom
//- Use the Showroom Default Template

block content
	.container
		h1 Service Page
		if !data.service
			h2 Invalid Post.
		else
			h2 True! Now what?
			div= data.service.title
			div= data.service.heading
			div= data.service.content

		h1 Products
		if !data.products
			h2 No Products!
		else
			h2 Sweet, you got a product!
			each product in data.products
				div= product.title
				div= product.item_one.title
				div
					img(src="/uploads/images/#{product.item_one.icon.filename}")
				div= product.item_one.content

				h2 Now for the cool stuff
				each service in product.services
					if service.id == data.service.id
						div= service.title