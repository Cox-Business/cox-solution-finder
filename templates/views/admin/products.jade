extends ../../layouts/default-admin

block content
	.container
		h1 Products
		.row
			.col-lg-12.col-md-12
				table.table.table-striped.table-hover.table-responsive
					thead
						tr
							each field in data.defaultColumns
								if(field.path != 'state')
									td=field.label
					tbody
						each product in data.productsList 
							tr(id=product.slug)
								each field in data.defaultColumns
									if(field.path != 'state')
										if(field.path == 'title')
											if(product.editor == undefined || product.editor.id == data.user)
												td
													a(href="/admin/products/"+product.slug)=product[field.path]
											else
												td
													span.glyphicon.glyphicon-lock
													span=product[field.path]

										else if(field.path == 'industries')
											td
												each industry, index in product[field.path]
													if index != product[field.path].length - 1
														=industry.title + ', '
													else
														=industry.title
										else if(field.path == 'svg_icon')
											td.icon-column
												span.product-icon.coxicon(class="coxicon_"+product[field.path])
										else if(field.path == 'updatedAt')
											td=product._.updatedAt.format('MMMM DD, YYYY h:mm:ss a')
										else
											td=product[field.path]
