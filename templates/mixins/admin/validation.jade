mixin validations(validations)
		if(validations)
			if(validations.rangelength)
				- validation = ''
				- label = 'Max Length'
				- validation = '' + label + ': ' + validations.rangelength[1] + ' characters'
			if(validations.required)
				- validation += ', Required'
		else
			- validation = ''

mixin printValidation()
	if(validation != '') 
		=' [' + validation + '] '