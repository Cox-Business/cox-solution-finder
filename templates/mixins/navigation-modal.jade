mixin tile(tile, key)

	a(href=linkURI('/'+key+'/' + tile.slug) title=tile.title data-tile-id=tile.id).navigation-modal-tile
		.tile-icon.coxicon(class="coxicon_"+tile.svg_icon)
		.tile-title
			span= tile.title

mixin tiles-showroom(tiles, key)

	//- The Tiles
	.navigation-modal-tiles(data-navigation-modal=key)
		//- After 2nd Tile go to second row and create a fake tile
		if tiles.length < 3
			.row.navigation-modal-tile-row
				each tile, index in tiles
					if index == 0
						a.navigation-modal-tile.fake-tile
						span.go-left
							+tile(tile, key)
					if index == 1
						span.go-right
							+tile(tile, key)
							br
							a.navigation-modal-tile.fake-tile

		if tiles.length == 3
			.row.navigation-modal-tile-row
				each tile, index in tiles
					if index > 1
						span.go-right
							+tile(tile, key)
					else
						if index == 0
							a.navigation-modal-tile.fake-tile
						span.go-left
							+tile(tile, key)
						if index == 1
							a.navigation-modal-tile.fake-tile
							br
							a.navigation-modal-tile.fake-tile
							a.navigation-modal-tile.fake-tile

		if tiles.length == 4
			.row.navigation-modal-tile-row
				each tile, index in tiles
					if index > 1
						span.go-right
							+tile(tile, key)
					else
						if index == 0
							a.navigation-modal-tile.fake-tile
						span.go-left
							+tile(tile, key)
						if index == 1
							a.navigation-modal-tile.fake-tile
							br
							a.navigation-modal-tile.fake-tile
							a.navigation-modal-tile.fake-tile

		//- After 3rd Tile go to second row and create a fake tile
		if tiles.length > 4
			.row.navigation-modal-tile-row
				each tile, index in tiles
					if index > 2
						span.go-right
							+tile(tile, key)
					else
						span.go-left
							+tile(tile, key)
						if index == 2
							a.navigation-modal-tile.fake-tile
							a.navigation-modal-tile.fake-tile
							br
							a.navigation-modal-tile.fake-tile
							a.navigation-modal-tile.fake-tile



