mixin markdown(item)
	+validations(item.field.options.m_cms.maxLength)
	
	.form-group.markdown
		label=item.field.label
			+site-icons(item.field.options.m_cms)

		textarea(name=item.field.path data-rules=item.field.options.m_cms.validations autocomplete="off" data-resize="vertical" data-hidden-buttons="cmdImage,cmdUrl,cmdQuote,cmdCode" rows="10" style="height:auto").form-control.validate
			=data.current.get(item.field.path).md
		p.help-block=item.field.options.note
			+printValidation()