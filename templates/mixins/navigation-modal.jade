mixin tile(tile, key)

	a(href='/'+key+'/' + tile.slug title=tile.title).navigation-modal-tile
		.tile-icon
			img(src="/uploads/images/#{tile.icon.filename}" alt=tile.title + " icon")
		.tile-title
			span= tile.title

mixin tiles-showroom(tiles, key)

	//- The Tiles
	.navigation-modal-tiles(data-navigation-modal=key)

		//- Single Row of Tiles
		if tiles.length < 3
			.row.navigation-modal-tile-row
				each tile, index in tiles
					+tile(tile, key)

		//- After 2nd Tile go to second row and create a fake tile
		if tiles.length == 3 || tiles.length == 4
			.row.navigation-modal-tile-row
				each tile, index in tiles
					+tile(tile, key)
					if index == 1
						br
						a.navigation-modal-tile.fake-tile

		//- After 3rd Tile go to second row and create a fake tile
		if tiles.length > 4
			.row.navigation-modal-tile-row
				each tile, index in tiles
					+tile(tile, key)
					if index == 2
						br
						a.navigation-modal-tile.fake-tile


mixin tiles-companion(tiles, key)

	//- The Tiles
	.navigation-modal-tiles.tiles-companion(data-navigation-modal=key)
		.tiles-companion-subcontainer

			//- Single Row of Tiles
			if tiles.length < 3
				.row.navigation-modal-tile-row
					each tile, index in tiles
						+tile(tile, key)

			//- After 2nd Tile go to second row and create a fake tile
			if tiles.length == 3
				.row.navigation-modal-tile-row
					each tile, index in tiles
						if index > 1
							span.go-right
								+tile(tile, key)
						else
							span.go-left
								+tile(tile, key)
							if index == 1
								a.navigation-modal-tile.fake-tile
								br

			if tiles.length == 4
				.row.navigation-modal-tile-row
					each tile, index in tiles
						if index > 1
							span.go-right
								+tile(tile, key)
						else
							span.go-left
								+tile(tile, key)
							if index == 1
								a.navigation-modal-tile.fake-tile
								br
								a.navigation-modal-tile.fake-tile

			//- After 3rd Tile go to second row and create a fake tile
			if tiles.length > 4
				.row.navigation-modal-tile-row
					each tile, index in tiles
						if index > 2
							span.go-right
								+tile(tile, key)
						else
							span.go-left
								+tile(tile, key)
							if index == 2
								a.navigation-modal-tile.fake-tile
								a.navigation-modal-tile.fake-tile
								br
								a.navigation-modal-tile.fake-tile
								a.navigation-modal-tile.fake-tile
