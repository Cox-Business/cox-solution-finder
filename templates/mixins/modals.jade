mixin videoModal
	.modal.csf-modal.csf-video-modal.fade(id="video_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
		button.btn.btn-default.global-close.csf-content-close(type="button" data-dismiss="modal" data-video-close="the_video")
			img(src="/images/close.png")
		video(id="the_video" class="video-js vjs-default-skin" width="inherit" height="inherit" controls preload="none" poster="" data-setup='{"techOrder": ["html5"]}')
			source(src="/default_videos/default.mp4" type='video/mp4')
			source(src="/default_videos/default.webm" type='video/webm')
			h2.video-title
mixin storyModal
	.modal.csf-modal.csf-story-modal.fade(id="story_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
		button.btn.btn-default.global-close.csf-content-close(type="button" data-dismiss="modal" data-video-close="the_story")
			img(src="/images/close.png")
		.story-container
			.story-content
			.story-featured-image
			h2.story-title
mixin imageModal
	.modal.csf-modal.csf-image-modal.fade(id="image_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
		button.btn.btn-default.global-close.csf-content-close(type="button" data-dismiss="modal" data-video-close="the_image")
			img(src="/images/close.png")
		.image-container
			.imageModal-featured-image
			h2.image-title